{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "moduleResolution": "Node",
    "declaration": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "outDir": "lib/",
    "baseUrl": "src/"
  },
  "include": ["src/**/*", "@types/**/*"],
  "compileOnSave": false
}
